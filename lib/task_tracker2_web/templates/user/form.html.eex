<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>

     <div class="form-group">
    <%= label f, :password, class: "control-label" %>
    <%= password_input f, :password, class: "form-control" %>
    <%= error_tag f, :password %>
  </div>

  <div class="form-group">
    <%= label f, :password_confirmation, class: "control-label" %>
    <%= password_input f, :password_confirmation, class: "form-control" %>
    <%= error_tag f, :password_confirmation %>
  </div>

  <%= label f, :fname %>
  <%= text_input f, :fname %>
  <%= error_tag f, :fname %>

  <%= label f, :lname %>
  <%= text_input f, :lname %>
  <%= error_tag f, :lname %>

  <%= label f, :admin %>
  <%= checkbox f, :admin %>
  <%= error_tag f, :admin %>


  <div class="form-group">
    Is this new user a manager?
    <%= checkbox f, :is_manager, class: "form-control" %>
    <%= error_tag f, :is_manager %>
  </div>

  <div class="form-group">
    Select Manager
    <%= select f, :manager_id, Enum.map(@managers, fn u -> {u.fname, u.id} end) ++ [nil]%>
    <%= error_tag f, :manager_id %>
</div>
  <div>
    <%= submit "Save" %>
  </div>
<% end %>
